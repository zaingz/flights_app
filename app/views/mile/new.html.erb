
<div class="container">
  <div class="row">


    <div class="col-md-6 col-md-offset-3">

      <%=form_for @mile, url: mile_create_path, html: {method: "post"} do |f| %>
          <div class="form-group">
            <label for="exampleInputEmail1">Alliance</label>
            <%= f.text_field :alliance, class:'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Zone</label>
            <%= f.text_field :zone,class:'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">Miles</label>
            <%= f.text_field :miles ,class:'form-control' %>
          </div>

          <%= hidden_field_tag :index, params[:index]%>

          <div class="pull-right">
            <%= link_to 'Back', :mile_index, class:'btn btn-warning' %>
            <%= f.submit :Submit, class: 'btn btn-success' %>
          </div>
          </div>


      <% end %>




      </div>












