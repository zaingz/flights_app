<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="page-header text-center">
      <h3>Create a new Admin</h3>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :admin_create_now, html: {method: "post"}, class:'form-horizontal' do |f| %>


        <div class="form-group col-md-8 col-md-offset-2">
          <div class="input-group">
            <div class="input-group-addon"><%= fa_icon 'user' %></div>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
          </div>
        </div>
        <div class="form-group col-md-8 col-md-offset-2">
          <div class="input-group">
            <div class="input-group-addon"><%= fa_icon 'lock' %></div>
            <%= f.password_field :password, class: 'form-control', placeholder: 'password' %>
          </div>
        </div>

        <div class="form-group col-md-8 col-md-offset-2">
          <div class="input-group">
            <div class="input-group-addon"><%= fa_icon 'lock' %></div>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'confirm password' %>
          </div>
        </div>


        <div class="form-group col-md-8 col-md-offset-2">

          <%= f.submit 'Create',class:"btn btn-success pull-right"%>

        </div>


    <%end%>

  </div>
</div>