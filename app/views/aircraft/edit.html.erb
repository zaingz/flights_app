
<div class="container">
  <div class="row">


    <div class="col-md-6 col-md-offset-3">

      <%=form_for @aircraft, url: aircraft_update_path, html: {method: "post"} do |f| %>
          <div class="form-group">
            <label for="exampleInputEmail1">Airline</label>
            <%= f.text_field :airline, class:'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Aircraft</label>
            <%= f.text_field :aircraft,class:'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">Seat</label>
            <%= f.text_field :seat,class:'form-control' %>
          </div>

          <%= hidden_field_tag :index, params[:index]%>
          <%=f.file_field :picture%>
          <div class="pull-right">
            <%= link_to 'Back', :aircraft_index, class:'btn btn-warning' %>
            <%= f.submit :Submit, class: 'btn btn-success' %>
          </div>
          </div>


      <% end %>




